### 2021-1-29 15:27:24 常见问题新增数据库  未更新  更新到dev

``````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````````


create table invoice_common_problem
(
  id bigint not null comment '主键Id',
    `delete_flag` int(11) DEFAULT '0' COMMENT '删除状态（0-未删除、1-已删除）',
    `created_by` varchar(32) COLLATE utf8mb4_unicode_ci DEFAULT NULL COMMENT '创建人',
    `created_at` datetime DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间',
    `updated_by` varchar(32) CHARACTER SET utf8mb4 DEFAULT NULL COMMENT '最后更新人',
    `updated_at` datetime DEFAULT CURRENT_TIMESTAMP COMMENT '最后更新时间',
    `version` bigint(20) unsigned DEFAULT '0' COMMENT '版本',
  constraint invoice_common_problem_pk
  primary key (id)
)
comment '常见问题表';


alter table invoice_common_problem
  add title varchar(60) not null comment '问题标题' after id;
alter table invoice_common_problem
  add status int(2) not null comment '状态' after problem_title;
alter table invoice_common_problem
  add priority int(5) default 0 not null comment '排序优先级' after status;
alter table invoice_common_problem
  add content text not null comment '富文本内容' after problem_title;


